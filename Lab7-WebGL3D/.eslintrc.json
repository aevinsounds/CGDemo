{
    "env": {
        "browser": true,
        "commonjs": false,
        "es6": true,
        "node": false
    },
    "parserOptions": {
        "ecmaFeatures": {
        },
        "sourceType": "script",
        "ecmaVersion": 2018
    },
    "rules": {
        "no-const-assign": "error",
        "no-this-before-super": "error",
        "no-undef": "error",
        "no-unreachable": "error",
        "no-unused-vars": ["warn", { "vars": "all", "args": "none" }],
        "constructor-super": "error",
        "valid-typeof": "error",
        "curly": "warn",
        "no-trailing-spaces": "warn",
        "require-await": "error",
        "semi": "warn"
    },
    "globals": {
        "$": true,
        "Renderer3D": true,
        "CanvasAnalysisInterface": true,
        "createProgramFromScripts": true,
        "resizeCanvasToDisplaySize": true,
        "createSliderFromSelector": true,
        "M4Math": true,
        "Geometry": true,
        "radToDeg": true,
        "degToRad": true,
        "V3Math": true,
        "setupSliders": true,
        "torusProps": true,
        "cylinderProps": true,
        "updateGeometry": true
    }
}